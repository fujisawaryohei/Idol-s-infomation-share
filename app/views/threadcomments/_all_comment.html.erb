<div id="comment-index">
  <% thread.threadComments.each do |threadcomment| %>
    <%= render 'users/user_info', model: threadcomment %>
    <div class="comment-content" style="height:50px;">
      <p><%= threadcomment.comment %></p>
      <% if !current_user.nil? %>
        <span><%= link_to '削除する', "/threaders/#{threadcomment.threader.hash_id}/threadcomment/#{threadcomment.hash_id}", method: :delete, class: "btn btn-danger"%></span>
      <% end %>
    </div>
  <% end %>
</div>
